<div class="container">
    <div class="card">
        <div class="card-header">
            Select your Chart Type and Data
        </div>
        <div class="card-body">
            <span>Select Your Chart Type</span>
            <br>
            <span>Line</span>
            <input type="radio" name="chart-type" value="Line"/>
            <br>
            <span>Bar</span>
            <input type="radio" name="chart-type" value="Bar"/>
            <br>
            <span>Pie</span>
            <input type="radio" name="chart-type" value="Pie"/>
            <br>
            <span>Donut</span>
            <input type="radio" name="chart-type" value="Donut"/>
            <br>
            <span>Does your Dataset have Headers?</span>
            <br>
            <span>Yes</span>
            <input type="radio" name="header-type" value="header"/>
            <br>
            <span>No</span>
            <input type="radio" name="header-type" value="noHeader"/>
            <br>
            <div class="border" id="loaded-data">
                <span id="dataSet">DataSet Place Holder</span>
            </div>
            <div id="dropdowns"></div>
            <br>
            <span>Choose your Data Set</span>
            <br>
            <strong>Upload file:</strong> 
            <input type="file" id="file"/>
            <button id="Load">Load</button>
            <button id="Build">Build</button>
        </div>
    </div>
</div>